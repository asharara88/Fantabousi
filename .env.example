# Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =====================================================
# FRONTEND SAFE VARIABLES (VITE_ prefix = exposed to browser)
# =====================================================

# Supabase Configuration (Safe to expose)
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Google OAuth for authentication (Safe to expose)
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here

# Stripe Configuration for Payments (Safe to expose - publishable key only)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
# For development/testing, use:
# VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key_here

# Environment Identifier (Safe to expose)
VITE_ENV=production

# API Base URL (Safe to expose)
VITE_API_BASE_URL=https://api.biowell.ai/v1

# Feature Flags (Safe to expose)
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_PAYMENTS=true

# =====================================================
# SERVER-SIDE ONLY VARIABLES (NO VITE_ prefix = secure)
# =====================================================

# Supabase Service Role (NEVER expose to frontend)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# JWT Secret for authentication (NEVER expose to frontend)
JWS_SECRET=your_jwt_secret_here

# OpenAI API for AI coaching features (NEVER expose to frontend)
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs API for voice synthesis (NEVER expose to frontend)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# RapidAPI for muscle image analysis (NEVER expose to frontend)
RAPIDAPI_MUSCLE_IMAGE_KEY=your_rapidapi_key_here

# Spoonacular API for nutrition data (NEVER expose to frontend)
SPOONACULAR_API_KEY=your_spoonacular_api_key_here

# Nutritionix API for food database (NEVER expose to frontend)
NUTRITIONIX_API_KEY=your_nutritionix_api_key_here
NUTRITIONIX_APP_ID=your_nutritionix_app_id_here

# Stripe Secret Key (NEVER expose to frontend)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here

# =====================================================
# BUILD CONFIGURATION
# =====================================================

# Netlify Build Configuration
NODE_ENV=production
CI=true
GENERATE_SOURCEMAP=false
VITE_ENABLE_PAYMENTS=true

# Analytics (Optional)
VITE_GA_TRACKING_ID=your_google_analytics_id_here
